<div class="message">
  <div class="message-date">
    <div class="post-name">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= messages.user.name %>
    </div>
    <div class="post-time">
      <!-- 投稿した時刻を出力する -->
      <%= l messages.created_at %>
    </div>
  </div>
  <div class="message-content">
    <div class="post-message">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= messages.content %>
    </div>
    <%= image_tag messages.image.variant(resize: '400x400'), class: 'message-image' if messages.image.attached? %>
  </div>
</div>